#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	float chieucao;
	float canhday;
	float dientichtamgiac;
	
	printf("Dien tich tam giac\n");
	
	printf("chieu cao=\n");
	scanf("%f",&chieucao);
	
	printf("canh day=\n");
	scanf("%f",&canhday);
	
	dientichtamgiac=(chieucao*canhday)/2;
	printf("dien tich=%f",dientichtamgiac);
	return 0;
}
